{
    "editor.fontFamily": "OperatorMonoSSm-light, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 16,
    "editor.cursorStyle": "line",
    "editor.cursorBlinking": "phase",
    "editor.formatOnType": true,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80,
    "editor.wrappingIndent": "indent",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.snippetSuggestions": "top",
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },
    "editor.rulers": [80, 90, 100],
    "extensions.autoUpdate": true,
    "git.enableSmartCommit": true,
    "newFile.defaultBaseFileName": "",
    "newFile.defaultFileExtension": "none",
    "newFile.showPathRelativeTo": "project",
    "newFile.expandBraces": true,
    "workbench.colorTheme": "One Monokai",
    "workbench.colorCustomizations": {
        "statusBar.background": "#1A1A1A",
        "statusBar.noFolderBackground"
         : "#212121",
        "statusBar.debuggingBackground": "#263238",
        "statusBar.foreground": "#48ADB7"
    },
    "workbench.startupEditor": "welcomePage",
    "workbench.iconTheme": "vscode-icons",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "Meslo LG M DZ for Powerline",
    "terminal.integrated.scrollback": 8000,
    "window.zoomLevel": 0,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/tmp": true
    },
    "ruby.lint": {
        "reek": true,
        "rubocop": true,
        "ruby": true, // Runs ruby -wc
        "fasterer": true,
        "debride": true,
        "ruby-lint": true
    },

    //advanced: set command line options for some linters:
    "ruby.lint": {
        "ruby": {
            "unicode": true // Runs ruby -wc -Ku
        },
        "rubocop": {
            "only": ["SpaceInsideBlockBraces", "LeadingCommentSpace"],
            "lint": true,
            "rails": true
        },
        "reek": true
    }
}